<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddExpense"
    android:orientation="vertical"
    android:padding="30dp">

    <!-- got header here -->
    <TextView
        android:id="@+id/TVAddTransaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginBottom="10dp"
        android:text="Add transaction"
        android:textColor="#000000"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BTExpenses"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_ish_button"
            android:fontFamily="@font/open_sans"
            android:text="Expenses"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:backgroundTint="@color/orange" />

        <Button
            android:id="@+id/BTIncome"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Income"
            android:fontFamily="@font/open_sans"
            android:textAllCaps="false"
            app:backgroundTint="@color/orange"
            android:background="@drawable/round_ish_button"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="#000000"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:id="@+id/VTAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/open_sans_semibold"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/ETAmount"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="RM"
        android:paddingLeft="15dp"
        android:background="@drawable/edit_text_frame"
        />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receipt"
            android:fontFamily="@font/open_sans_semibold"
            android:textColor="#000000"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"/>
        <Button
            android:layout_width="wrap_content"
            android:text="Add"
            android:fontFamily="@font/open_sans"
            android:layout_height="40dp"
            android:background="@drawable/round_ish_button"
            android:textAllCaps="false"
            android:textColor="#000000"
            style="?android:attr/borderlessButtonStyle"
            app:backgroundTint="@color/orange"
            android:layout_marginRight="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:text="None"
            android:fontFamily="@font/open_sans"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            style="?android:attr/borderlessButtonStyle"
            app:backgroundTint="@color/orange"
            android:background="@drawable/round_ish_button"
            />

    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wallet"
        android:fontFamily="@font/open_sans_semibold"
        android:textColor="#000000" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_ish_button"
            android:fontFamily="@font/open_sans"
            android:shadowColor="#00FFFFFF"
            android:text="Maybank"
            style="?android:attr/borderlessButtonStyle"
            app:backgroundTint="@color/orange"
            android:textAllCaps="false"
            android:textColor="#000000" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/round_ish_button"
            android:fontFamily="@font/open_sans"
            android:text="Boost"
            android:textAllCaps="false"
            android:textColor="#000000"
            app:backgroundTint="@color/orange" />

        <Button
            android:layout_width="wrap_content"
            android:text="Other"
            android:fontFamily="@font/open_sans"
            android:layout_height="40dp"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:background="@drawable/round_ish_button"
            style="?android:attr/borderlessButtonStyle"
            app:backgroundTint="@color/orange"
            android:layout_weight="1"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/open_sans_semibold"
        android:text="Categories"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:textColor="#000000" />


</LinearLayout>