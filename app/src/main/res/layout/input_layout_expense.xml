<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardElevation="0dp"
    android:layout_margin="30dp"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add transaction"
        android:textStyle="bold"
        android:textColor="#000"
        android:id="@+id/item"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_border">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/VTTransType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction type"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="20dp"
                android:textColor="#000000" />
            <Spinner
                android:id="@+id/SPTransactionType"
                android:dropDownSelector="@drawable/directions_car_fill1_wght300_grad0_opsz40"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:entries="@array/transaction_type"
                android:gravity="center"
                android:minHeight="48dp">

            </Spinner>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receipt"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="Add"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="40dp"
                    android:background="@drawable/round_ish_button"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    style="?android:attr/borderlessButtonStyle"
                    app:backgroundTint="@color/orange"
                    android:layout_marginRight="10dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="None"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    style="?android:attr/borderlessButtonStyle"
                    app:backgroundTint="@color/orange"
                    android:background="@drawable/round_ish_button"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/VTWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet type"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="20dp"
                android:textColor="#000000" />
            <Spinner
                android:id="@+id/SPWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:entries="@array/wallet_type"
                android:gravity="center"
                android:minHeight="48dp">

            </Spinner>

            <TextView
                android:id="@+id/VTCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="20dp"
                android:textColor="#000000" />
            <Spinner
                android:id="@+id/SPCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:entries="@array/items"
                android:gravity="center"
                android:minHeight="48dp">

            </Spinner>

            <TextView
            android:id="@+id/VTAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="20dp"
            android:textColor="#000000" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="RM"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_frame"
                />

            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Note"
                android:id="@+id/note"
                android:textColor="#000"
                android:textColorHint="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/BTcancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_ish_button"
                    android:fontFamily="@font/open_sans"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:backgroundTint="@color/orange" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/BTadd"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_ish_button"
                    android:fontFamily="@font/open_sans"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    app:backgroundTint="@color/orange" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>