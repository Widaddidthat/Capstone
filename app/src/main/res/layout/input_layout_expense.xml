<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/expenseCardView"
    android:layout_width="match_parent"
    android:orientation="vertical"
    app:cardElevation="0dp"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:layout_gravity="center_vertical|center_horizontal"
        android:orientation="vertical"
        android:background="@drawable/custom_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add transaction"
                android:textStyle="bold"
                android:textColor="#000"
                android:id="@+id/item"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/VTTransType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transaction type"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="20dp"
                android:textColor="#000000" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--<RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/RBExpense"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Expenses"
                        android:layout_weight="1"
                        android:button="null"
                        android:background="@drawable/round_ish_button"
                        android:fontFamily="@font/open_sans"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        android:gravity="center"
                        app:backgroundTint="@color/orange"
                        android:layout_marginRight="10dp"/>
                    <RadioButton
                        android:id="@+id/RBIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="Income"
                        android:layout_weight="1"
                        android:button="null"
                        android:background="@drawable/round_ish_button"
                        android:fontFamily="@font/open_sans"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:backgroundTint="@color/orange"/>
                </RadioGroup>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/BTExpenses"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_ish_button"
                        android:fontFamily="@font/open_sans"
                        android:text="Expenses"
                        android:textAllCaps="false"
                        android:textColor="#000000"
                        app:backgroundTint="@color/orange" />

                    <Button
                        android:id="@+id/BTIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Income"
                        android:fontFamily="@font/open_sans"
                        android:textAllCaps="false"
                        app:backgroundTint="@color/orange"
                        android:background="@drawable/round_ish_button"
                        style="?android:attr/borderlessButtonStyle"
                        android:textColor="#000000"
                        android:layout_weight="1"/>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Receipt"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textColor="#000000"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"/>
                <Button
                    android:id="@+id/BTAddReceipt"
                    android:layout_width="wrap_content"
                    android:text="Add"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="40dp"
                    android:background="@drawable/round_ish_button"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    style="?android:attr/borderlessButtonStyle"
                    app:backgroundTint="@color/orange"
                    android:layout_marginRight="10dp"
                    android:onClick="true"/>
                <Button
                    android:layout_width="wrap_content"
                    android:text="None"
                    android:fontFamily="@font/open_sans"
                    android:layout_height="40dp"
                    android:textAllCaps="false"
                    android:textColor="#000000"
                    style="?android:attr/borderlessButtonStyle"
                    app:backgroundTint="@color/orange"
                    android:background="@drawable/round_ish_button"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/VTWallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wallet type"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="20dp"
                android:textColor="#000000" />
            <Spinner
                android:id="@+id/SPWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:prompt="@string/wallet"
                android:entries="@array/walletList"
                android:gravity="center"
                android:minHeight="48dp">

            </Spinner>

            <TextView
                android:id="@+id/VTCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Category"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/open_sans_semibold"
                android:layout_marginTop="20dp"
                android:textColor="#000000" />
            <Spinner
                android:id="@+id/SPCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:entries="@array/expensesCategory"
                android:gravity="center"
                android:minHeight="48dp">

            </Spinner>

            <TextView
            android:id="@+id/VTAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/open_sans_semibold"
            android:layout_marginTop="20dp"
            android:textColor="#000000" />

            <EditText
                android:id="@+id/amount"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ems="10"
                android:inputType="numberDecimal"
                android:text="RM"
                android:paddingLeft="15dp"
                android:background="@drawable/edit_text_frame"
                />

            <EditText
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Note"
                android:id="@+id/note"
                android:textColor="#000"
                android:textColorHint="#000"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/BTCancel"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/round_ish_button"
                    android:fontFamily="@font/open_sans"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <Button
                    android:id="@+id/BTadd"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/round_ish_button"
                    android:fontFamily="@font/open_sans"
                    android:text="Add"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/black" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>